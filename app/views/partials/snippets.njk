<section class="snippets-list">
      <div class="list-header">
        <div class="actions">
          <form action="/app/categories/{{ activeCategory }}?_method=DELETE" method="POST">
            <button type="submit" class="delete-category">Remover Categoria</button>
          </form>
        </div>
        <a href="#" data-modal-open="#new-snippet">Novo Snippet</a>
      </div>

      {% for snippet in snippets %}
        <a href="/app/categories/{{ activeCategory }}/snippets/{{ snippet.id }}">
          <strong>{{ snippet.title }}</strong>
          <p>{{ snippet.excerpt }}</p>
        </a>
      {% endfor %}
    </section>

    <div class="modal" id="new-snippet">
      <form class="modal-content" method="POST" action="/app/categories/{{ activeCategory }}/snippets/create">
        <input type="text" name="title" placeholder="Titulo da categoria" />

        <div class="content-container">
          <textarea name="content" class="mde" placeholder="ConteÃºdo do snippet"></textarea>
        </div>

        <button type="submit">Salvar snippet</button>
        <a href="#" data-modal-close="#new-snippet">Cancelar</a>
      </form>
    </div>
